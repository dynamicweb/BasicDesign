@inherits ViewModelTemplate<SavedCardListViewModel>
@using Dynamicweb.Rendering
@using Dynamicweb.Ecommerce.Frontend.SavedCards

@{
    string currentPageLink = "/Default.aspx?ID=" + Pageview.Page.ID;
}    

@functions {
    void RenderPagination(string currentPageLink, SavedCardListViewModel model)
    {
        <ul class="pagination">
            @{
                string pageHrefTemplate = string.Format("<a class=\"page-link\" href=\"{0}&PageNum={{0}}&PageSize={{1}}\">{{0}}</a>", currentPageLink);
            }
            @for (int i = 1; i <= model.PageCount; i++)
            {
                var css = i == model.CurrentPage
                ? "page-item active"
                : "page-item";
                <li class="@css">
                    @string.Format(pageHrefTemplate, i, model.PageSize)
                </li>
            }
        </ul>
    }
}

<h3>My Orders</h3>

@if (Model.SavedCardList != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Identifier</th>
                <th>CardType</th>
                <th>ID</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        
        @foreach (var savedcard in Model.SavedCardList)
        {
            <tr>
                <td>@savedcard.Name</td>
                <td>@savedcard.Identifier</td>
                <td>@savedcard.CardType</td>
                <td><a href="?savedcardid=@savedcard.ID">Error log</a></td>
                <td>
                <form method="post">
                        <input type="hidden" name="SavedCardId" value="@savedcard.ID" />
                        <input type="hidden" name="SavedCardCmd" value="CardDelete" />

                        <button type="submit" class="btn btn-primary btn-sm">@Translate("Delete")</button>
                </form>
                </td>
            </tr>
        }
    </table>
    <text>@{RenderPagination(currentPageLink, Model);}</text>
}
